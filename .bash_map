#!/bin/bash

# -----------------------------------------------------------------------------
# change keyboard settings
# -----------------------------------------------------------------------------

# if not an ssh connection
if  [ -z "$SSH_TTY" ]           && \
    [ -z "$SSH_CONNECTION" ]    && \
    [ -z "$SSH_CLIENT" ]        && \
    [ -n "$DISPLAY" ]; then

    MAP=$(setxkbmap -query)

    # set layout
    if [ "$(echo $MAP | grep "layout" | awk '{print $2}')" != "us" ]; then
        setxkbmap -layout us
    fi

    # map keys
    if [ -z "$(echo $MAP | grep "options" | awk '{print $2}')" ]; then
        case $(hostname) in
            dalVM)
                # right alt is control (freestyle2 keyboard)
                setxkbmap -option altwin:ctrl_win
                ;;
            *)
                # swap ctrl and caps
                setxkbmap -option ctrl:swapcaps
                ;;
        esac
    fi

